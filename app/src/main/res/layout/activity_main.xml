<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.wknn_location.MainActivity">

    <EditText
            android:id="@+id/X_REF"
            android:hint="X_REF"

            android:maxLength="4"

            android:layout_width="78dp"
            android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/Y_REF"
            android:hint="Y_REF"
            android:maxLength="4"

            android:layout_width="79dp"
            android:layout_height="43dp"
            app:layout_constraintLeft_toRightOf="@+id/X_REF"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <EditText
        android:id="@+id/AP_refrence"
        android:hint="ref"
        android:maxLength="4"

        android:layout_width="70dp"
        android:layout_height="38dp"

            app:layout_constraintLeft_toRightOf="@+id/Y_REF"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" />


        <Button
            android:id="@+id/XY_Confir"

            android:text="DB"
            android:layout_width="56dp"
            android:layout_height="47dp"
            app:layout_constraintLeft_toRightOf="@+id/AP_refrence"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="362dp"
            android:layout_height="384dp"

            android:src="@drawable/rtoom"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteY="119dp"
            tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/Init"
        android:layout_width="63dp"
        android:layout_height="35dp"
        android:text="Init"
        app:layout_constraintLeft_toRightOf="@+id/scan_offline"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/XY_Confir" />

    <Button
        android:id="@+id/scan_offline"
        android:layout_width="69dp"
        android:layout_height="37dp"
        android:text="Sf"
        app:layout_constraintLeft_toRightOf="@+id/offline2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/AP_refrence" />

    <TextView
        android:id="@+id/offline1"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="offline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/X_REF" />

    <TextView
        android:id="@+id/offline2"
        android:layout_width="67dp"
        android:layout_height="29dp"
        android:text="offline2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Y_REF"
        app:layout_constraintLeft_toRightOf="@+id/X_REF"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/toOnline"
        android:layout_width="38dp"
        android:layout_height="81dp"
        android:text="online"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b11"
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:text="Button"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="90dp" />

</android.support.constraint.ConstraintLayout>